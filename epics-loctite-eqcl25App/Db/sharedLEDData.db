record (bo, "$(PREFIX){LOCTITE}:Rst"){
	field (DTYP, "stream")
	field (ZNAM, "Normal state")
	field (ONAM, "Reset")
	field (OUT, "@infoGathering.proto resetData port")
}

#Input 1 here to turn all selected channels on
record (bo, "$(PREFIX){LOCTITE}:ON"){
	field (DTYP, "stream")
	field (ZNAM, "Not irradiating")
	field (ONAM, "Irradiating")
	field (OUT, "@infoGathering.proto activateSelectedChannels port")
	field (VAL, 0)
}

#Input 1 here to turn all selected channels off
record (bo, "$(PREFIX){LOCTITE}:OFF"){
	field (DTYP, "stream")
	field (ZNAM, "Irradiating")
	field (ONAM, "Not irradiating")
	field (OUT, "@infoGathering.proto deactivateSelectedChannels port")
	field (VAL, 0)
}

#CONNection-IRRAdiation RAW information,
#as both are initially held in one register.
#Admittedly, this could be done by mbbo
record (longin, "$(PREFIX){LOCTITE}:CONNIRRA-Inp"){
        field (DTYP, "stream")
        field (INP, "@infoGathering.proto getConnectionAndIrradiationStatus port")
        field (SCAN, "1 second")
}

record (calcout, "$(PREFIX){LOCTITE:Chan1}:CONN-RAW"){
	field (INPA, "$(PREFIX){LOCTITE}:CONNIRRA-Inp")
	field (CALC, "A AND 1")
	field (SCAN, "1 second")
	field (PROC, 1)
	field (FLNK, "$(PREFIX){LOCTITE:Chan1}:CONN-Sts")
}

record (calcout, "$(PREFIX){LOCTITE:Chan1}:IRRA-RAW"){
	field (INPA, "$(PREFIX){LOCTITE}:CONNIRRA-Inp")
	field (CALC, "(A AND 16) / 16")
	field (SCAN, "1 second")
	field (PROC, 1)
	field (FLNK, "$(PREFIX){LOCTITE:Chan1}:IRRA-Sts")
}

record (bi, "$(PREFIX){LOCTITE:Chan1}:CONN-Sts"){
	field (DESC, "Chan1 Connection Status")
	field (INP, "$(PREFIX){LOCTITE:Chan1}:CONN-RAW")
	field (ZNAM, "Not connected")
	field (ONAM, "Connected")
	field (SEVR, "NO_ALARM")
}

record (bi, "$(PREFIX){LOCTITE:Chan1}:IRRA-Sts"){
	field (DESC, "Chan1 Irradiation Status")
	field (INP, "$(PREFIX){LOCTITE:Chan1}:IRRA-RAW")
	field (ZNAM, "Not irradiating")
	field (ONAM, "Irradiating")
	field (SEVR, "NO_ALARM")
}

